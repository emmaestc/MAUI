    <StackLayout Padding="20" Spacing="20">

            
            <Label Text="{Binding Display}"
               FontSize="40"
               HorizontalOptions="EndAndExpand"
               VerticalOptions="Center"
               TextColor="Black" />
        
        <Label Grid.Row="5"
           Grid.Column="0"
           Grid.ColumnSpan="3"
           Text="{Binding Result}"
           FontSize="40"
           HorizontalOptions="End"
           VerticalOptions="End" />

        <Grid RowDefinitions="*,*,*,*,*,*"
              ColumnDefinitions="*,*,*,*">
            
            <Button Text="0"
                    Grid.Row="5" Grid.Column="0"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="0" />
            
            <Button Text="1"
                    Grid.Row="4" Grid.Column="0"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="1" />

            <Button Text="2"
                    Grid.Row="4" Grid.Column="1"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="2" />

            <Button Text="3"
                    Grid.Row="4" Grid.Column="2"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="3" />

            <Button 
            Text="4"
                Grid.Row="3" Grid.Column="0"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="4" />

            <Button Text="5"
                    Grid.Row="3" Grid.Column="1"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="5" />

            <Button Text="6"
                    Grid.Row="3" Grid.Column="2"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="6" />

            <Button Text="7"
                    Grid.Row="2" Grid.Column="0"
                    FontSize="24"
                    BackgroundColor="LightGray"
                    Command="{Binding AppendDigitCommand}"
                    CommandParameter="7" />
            
            <Button
            Text="8"
            Grid.Row="2" Grid.Column="1"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="8" />

                
            <Button 
                Grid.Row="2" Grid.Column="2"
                Text="9"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="9" />

            

            <Button Text="."
                    Grid.Row="5" Grid.Column="2"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding AppendDigitCommand}"
            CommandParameter="." />
                
            <Button 
                Grid.Row="1" Grid.Column="0"
                Text="C"
                    FontSize="24"
                    BackgroundColor="LightGray"
                    Command="{Binding ClearCommand}" />

            <Button 
                Grid.Row="4" Grid.Column="3"
                Text="+"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding SetOperatorCommand}"
            CommandParameter="+" />

            <Button Text="-"
                    Grid.Row="3" Grid.Column="3"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding SetOperatorCommand}"
            CommandParameter="-" />

            <Button Text="*"
                    Grid.Row="2" Grid.Column="3"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding SetOperatorCommand}"
            CommandParameter="*" />

            <Button Text="/"
                    Grid.Row="1" Grid.Column="3"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding SetOperatorCommand}"
            CommandParameter="/" />
            
            <Button Text="%"
                    Grid.Row="1" Grid.Column="2"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding SetOperatorCommand}"
            CommandParameter="%" />

            <Button
            Text="="
                Grid.Row="5" Grid.Column="3"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding EqualsCommand}" />

            <Button 
            Text="Delete"
                 Grid.Row="1" Grid.Column="1"
            FontSize="24"
            BackgroundColor="LightGray"
            Command="{Binding DeleteCommand}" />


        </Grid>
        </StackLayout>
    </ContentPage>
   