<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MAUITest.MVVM.Views.CalculadoraView"
    Title="CalculadoraView">
    <VerticalStackLayout
        VerticalOptions="Center" 
            HorizontalOptions="Center">
        <Label 
            Text="{Binding Calculadora.num1}"
            FontSize="30"
            />
        <Slider
            Minimum="0"
            Maximum="100"
            Value="{Binding Calculadora.num2}"
            />
    </VerticalStackLayout>
</ContentPage>